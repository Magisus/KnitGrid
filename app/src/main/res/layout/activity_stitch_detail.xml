<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activities.StitchDetailActivity">

    <ImageView
        android:id="@+id/stitch_icon"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_alignParentStart="true"
        tools:background="@android:color/holo_blue_light"/>

    <TextView
        android:id="@+id/stitch_title"
        android:layout_width="wrap_content"
        android:layout_height="85dp"
        android:gravity="center_vertical"
        android:textSize="22sp"
        android:textColor="@android:color/black"
        android:layout_toEndOf="@id/stitch_icon"
        android:layout_marginStart="10dp"
        tools:text="Title"/>

    <TextView
        android:id="@+id/detail_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/stitch_icon"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:textSize="17sp"
        tools:text="Spelled out stitch description goes here."/>

    <ImageView
        android:id="@+id/expand_icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@id/detail_text"
        android:src="@drawable/expand_arrow"
        tools:background="@android:color/holo_blue_light"/>

    <TextView
        android:id="@+id/instructions_expandable_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_below="@id/detail_text"
        android:layout_toEndOf="@id/expand_icon"
        android:textSize="17sp"
        android:text="@string/instructions_title"/>

    <TextView
        android:id="@+id/instructions_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/instructions_expandable_title"
        />

</RelativeLayout>
